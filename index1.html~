          <script type="text/javascript" src="countries.js"></script>
          <script type="text/javascript" src="jQuery.js"></script>
		<script type="text/javascript">
		
		        $(document).ready(function(){
		        
                    var altImg={
                        "1":"Rashid Jahangir",
                        "2":"Quaid-e-Azam",
                        "3":"Z.A. Bhutto",
                        "4":"Nelson Mandela",
                        "5":"Khwaja ghulam farid"
                      }

                    var textImg={
                      "1":"Rashid Jahangir Photo",
                      "2":"Muhammad Ali Jinnah in London When he was Young",
                      "3":"Z A Bhutto was greate leader and thinker",
                      "4":"Nelson Mandela Play an important role SA progress",
                      "5":"Khwaja ghulam farid was great sariki poet"
                    }

                    var linkImg={
                        "1":"http://www.google.com/search?q=rashid+jahangir",
                        "2":"http://www.google.com/search?q=quaid+e+azam",
                        "3":"http://www.google.com/search?q=z+a+bhutto",
                        "4":"http://www.google.com/search?q=Nelson+Mandela",
                        "5":"http://www.google.com/search?q=Khwaja+ghulam+farid",
                      }


                     var countries=countries_list(); 
                     for(var i in countries){

                        var countryName=countriesWithSpaces(countries[i]);

                        $("#country").append('<option style="background:url(24/'+countryName+'.png); background-repeat:no-repeat;padding-left:40px;height:25px;border-bottom:1px solid;"  value='+i+'>'+countries[i]+'</option>');
                   
                        //console.log(countries[i]);
                     }

                     $("#country").change(function(){

                        var cid=$(this).val();
                        var countryID=countriesWithSpaces(countries[cid]);
                      
                        $(this).css({"background-image":"url(24/"+countryID+".png)"});

                     });

                     function countriesWithSpaces(s) {
                      
                      var spaces=s.split(' ').length;
                        if(spaces>0){
                          var res= s.split(' ');
                          var country_name="";
                          for(var k=0;k<spaces;k++){
                            if(k+1==spaces){
                              country_name=country_name+res[k];
                            }else{
                              country_name=country_name+res[k]+"-";
                            }
                          }
                          return country_name;
                        }else{
                          return s;
                        }


                     }

		                $("#progress").click(function(){
		                
		                        //var progressElement=document.getElementsByClass("progress-bar");
		                 
		                        var value=$(".progress-bar").attr("aria-valuenow");
		                        value=parseInt(value);
		                        if(value!=100){
		                                value=value+10;
		                        }else{
		                                alert("Progress Complete");
		                        }
		                        $(".progress-bar").attr("aria-valuenow",value);
		                        $(".progress-bar").html(value+"%");
		                        $(".progress-bar").css({"width":value+"%"});
		                
		                });


                    $("#prev").click(function(){

                      var src= $("img").attr("src");

                      var src_id= src.substr(0,1);



                      if(src_id<=1){
                        $("img").attr("src","8.jpg");
                        $("img").attr("alt",altImg["8"]);
                        $("img").attr("text",textImg["8"]);
                        $("a").attr("href",linkImg["8"])

                      }else{
                        $("img").attr("src",(parseInt(src_id)-1)+".jpg");
                        $("img").attr("alt",altImg[parseInt(src_id)-1]);
                        $("img").attr("text",textImg[parseInt(src_id)-1]);
                        $("a").attr("href",linkImg[parseInt(src_id)-1]);
                      }


                    });

                    $("#next").click(function(){

                      var src= $("img").attr("src");

                      var src_id= src.substr(0,1);


                      if(src_id>=8){
                        $("img").attr("src","1.jpg");
                        $("img").attr("alt",altImg["1"]);
                        $("img").attr("text",textImg["1"]);
                        $("a").attr("href",linkImg["1"])

                      }else{
                        $("img").attr("src",(parseInt(src_id)+1)+".jpg");
                        $("img").attr("alt",altImg[parseInt(src_id)+1]);
                        $("img").attr("text",textImg[parseInt(src_id)+1]);
                        $("a").attr("href",linkImg[parseInt(src_id)+1]);
                      }


                    });

                    $("#add_user").click(function(){

                     $(".form-signin").toggle(); 

                    });
		        
		        });
		
		</script>
